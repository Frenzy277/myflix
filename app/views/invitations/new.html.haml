%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @invitation, html: { class: "invite" } do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            = f.label :recipient_name, "Friend's Name"
            .row
              .col-sm-4
                = f.text_field :recipient_name, hide_label: true
                %input.form-control(type="text")
          .form-group
            = f.label :recipient_email, "Friend's Email Address"
            .row
              .col-sm-4
                = f.email_field :recipient_email, hide_label: true
          .form-group
            = f.label :message, "Invitation Message"
            .row
              .col-sm-6
                = f.text_area :message, rows: 6, value: "Please join this really cool site!", hide_label: true
        %fieldset.form-group.action
          = f.submit "Send Invitation", class: "btn btn-default"